@using Sistrategia.Drive.WebSite.Areas.Dev.Models
@model CloudStorageAccountIndexViewModel
@{
  ViewBag.Title = LocalizedStrings.CloudStorageAccounts_IndexTitle;
}

<ol class="breadcrumb">
  @*<li>@Html.ActionLink(LocalizedStrings.Account_IndexTitle, "Index", "Account")</li>*@
  <li>@Html.ActionLink(LocalizedStrings.Account_IndexTitle, "Index", "Account")</li>
  <li class="active">@LocalizedStrings.CloudStorageAccounts_IndexTitle</li>
</ol>

<h1>@ViewBag.Title</h1>
@*<h4>@LocalizedStrings.Account_IndexSubtitle</h4>*@
<hr />

@Html.ActionLink(LocalizedStrings.AddButton, "Create", "CloudStorageAccount", new {  }, new { @class = "btn btn-default", @role = "button" })
<table class="table table-hover">
  @*<caption>Test caption</caption>*@
  <thead>
    <tr>
      <th>@LocalizedStrings.Alias</th>
      <th>@LocalizedStrings.Name</th>
      @*<th>@LocalizedStrings.Modified</th>*@
      <th>@LocalizedStrings.ProviderName</th>
      <th>@LocalizedStrings.Description</th>
      @*<th>@LocalizedStrings.Shared</th>*@
    </tr>
  </thead>
  <tbody>
    @foreach (var account in @Model.CloudStorageAccounts) {
      <tr>
        <td>@Html.ActionLink(@account.Alias, "Details", new { Id = account.PublicKey.ToString("N") })</td>
        <td>@account.AccountName</td>
        <td>@account.CloudStorageProvider.Name</td>
        <td>@account.Description</td>
      </tr>
    }
  </tbody>
</table>