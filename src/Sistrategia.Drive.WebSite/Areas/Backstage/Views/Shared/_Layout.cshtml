@{
  string ControllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();

}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - SistrategiaDrive</title>
  <link rel="shortcut icon" href="https://sistrategiadrive.blob.core.windows.net/wwwroot/favicon.png">
  @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
  @Styles.Render("~/Content/backstagecss")
  @Scripts.Render("~/bundles/modernizr")
  @RenderSection("HtmlHeader", required: false)
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        @*@Html.ActionLink("SistrategiaDrive", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
        @*<a class="navbar-brand sistrategiaLogo" href="@Url.Content("~/")"><img src="~/Content/Img/logo_header_white.png" class="img-responsive" /></a>*@
        <a class="navbar-brand sistrategiaLogo" href="@Url.Content("~/Backstage")"><img src="https://sistrategiadrive.blob.core.windows.net/wwwroot/logo_header_white.png" class="img-responsive" /></a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">          
          <li @if (ControllerName.Equals("Inbox")) { @Html.Raw("class='active'")     ; } else { @Html.Raw("")     ; }>
            <a class="navbar-icon" href="~/Backstage/Inbox">Inbox</a>
          </li>
          <li @if (ControllerName.Equals("User")) { @Html.Raw("class='active'")    ; } else { @Html.Raw("")    ; }>
            <a class="navbar-icon" href="~/Backstage/User">Users</a>
          </li>
          @*<li><a href="~/Backstage/User">Users</a></li>*@
        </ul>
        @*@Html.Partial("_LoginPartial")*@

        <ul class="nav navbar-nav navbar-right">
          <li><a href="~/Backstage/Home">Backstage</a></li>
          @*<li>@Html.ActionLink(Sistrategia.Drive.WebSite.Views.Home.Welcome.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
          @*<li>@Html.ActionLink(Sistrategia.Drive.WebSite.Views.Home.Welcome.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@

          @if (HttpContext.Current.User.Identity.IsAuthenticated) {

            @*<li><a class="navbar-icon" href="@Url.Content("~/Account")"><span class="glyphicon glyphicon-user"></span></a></li>
            if (HttpContext.Current.User.IsInRole("Developer")) {
              <li @if (ControllerName.Equals("Dev")) { @Html.Raw("class='active'")   ; } else { @Html.Raw("")   ; }>
                <a class="navbar-icon" href="@Url.Content("~/Dev")"><span class="glyphicon glyphicon-cog"></span></a>
              </li>
                }*@
                <li><a class="navbar-icon" href="@Url.Content("~/Account/LogOff")"><span class="glyphicon glyphicon-off"></span></a></li>

          }
        </ul>

      </div>
    </div>
  </div>

  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p class="pull-left">&copy; @DateTime.Now.Year - Sistrategia</p>
      <div class="pull-right hidden-xs">
        <ul class="list-inline">
          <li>@Html.ActionLink("English (US)", "ChangeLang", "Locale", new { Lang = "en-US", ReturnUrl = Url.Encode(Request.RawUrl) }, new { @class = " footer-lang-bar", @style = "font-size:11px;" })</li>
          <li>@Html.ActionLink("Español (México)", "ChangeLang", "Locale", new { Lang = "es-MX", ReturnUrl = Url.Encode(Request.RawUrl) }, new { @class = "footer-lang-bar", @style = "font-size:11px;" })</li>
        </ul>
      </div>

    </footer>
  </div>

  @*<script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>*@
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)  
</body>
</html>
