@{
  ViewBag.Title = LocalizedStrings.Home;
}


<h1>@ViewBag.Title</h1>

<h4>@LocalizedStrings.Home_IndexSubtitle</h4>
<hr />

<div class="row">
  <div class="col-md-2">
    <div class="list-group">
      <a href="#Documents" class="list-group-item active">
        <span class="glyphicon glyphicon-file"></span> @LocalizedStrings.Documents <span class="badge">145</span>
      </a>
      <a href="#Pictures" class="list-group-item">
        <span class="glyphicon glyphicon-camera"></span> @LocalizedStrings.Pictures <span class="badge">25</span>
      </a>
      <a href="#" class="list-group-item">
        <span class="glyphicon glyphicon-music"></span> @LocalizedStrings.Music <span class="badge">50</span>
      </a>
      <a href="#" class="list-group-item">
        <span class="glyphicon glyphicon-film"></span> @LocalizedStrings.Videos <span class="badge">8</span>
      </a>
    </div>
  </div>
  <div class="col-md-10">
    <a href="~/Home/Upload" class="btn btn-primary" role="button">Cargar</a>
    <table class="table table-hover">
      @*<caption>Test caption</caption>*@
     <thead>
       <tr>
         <th>@LocalizedStrings.Name</th>
         <th>@LocalizedStrings.Modified</th>
         <th>@LocalizedStrings.Shared</th>
       </tr>
     </thead>
      <tbody>
        <tr>
          <td>SampleFile.jpg</td>
          <td>@DateTime.Now.ToString()</td>
          <td>-</td>
        </tr>
      </tbody>
    </table>

  </div>
</div>