@{
  ViewBag.Title = "Confirm Email";
}

<h2>@ViewBag.Title.</h2>
<div>
  @if (User.Identity.IsAuthenticated) {
    <p>
      Thank you for confirming your email. Please @Html.ActionLink("click here to go to your SistrategiaDrive home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </p>
  }
  else {
    <p>
      Thank you for confirming your email. Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </p>
  }
</div>
